extends  ../report_summary_layout
block scripts
    script(src="/javascripts/report_summary_department.js")
block content
    br
    ol.breadcrumb
        li
            a(href="/abstract_risk") หน้าหลัก
        li.active รายงานสรุปยอดตามแผนกที่เกิดความเสี่ยง
    .alert.alert-warning(role="alert",style="display: none;")#divAlert
        i.fa.fa-warning
        | &nbsp; กรองข้อมูลวันที่ไม่ถูกต้อง
    .well.well-sm
        div.form-inline
            .row
                .col-md-12
                    .form-group
                        label วันที่
                        | &nbsp;&nbsp;&nbsp;&nbsp;
                        input#Date_Searchrisk1(type="date").form-control
                        | &nbsp;&nbsp;&nbsp;&nbsp;
                        label ถึง
                        | &nbsp;&nbsp;
                        input#Date_Searchrisk2(type="date").form-control
                        | &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        label หน่วยงานที่เกิดความเสี่ยง
                            | &nbsp;&nbsp;
                            select.form-control#slDepartment
                                option(value="") กรุณาเลือกรายการ....
                                for a in data.departments
                                    option(value="#{a.depcode}") #{a.depname}
                            | &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        button#btnSearch(type="button").btn.btn-success.btn-sm ค้นหา
                        button#btnPrint(type="button").btn.btn-success.btn-sm ปริ้น

    .panel.panel-primary
        .panel-heading
            h3.panel-title
                i.fa.fa-comments-o
                | &nbsp; รายงานสรุปยอดตามแผนกที่เกิดความเสี่ยง
        .panel-body
            table.table.striped#tblReport_summary_department
                thead
                    tr
                        td ลำดับ
                        td อุบัติการณ์ความเสี่ยง
                        td มค.
                        td กพ.
                        td มีค.
                        td เมษ.
                        td พค.
                        td มิย.
                        td กค.
                        td สค.
                        td กย.
                        td ตค.
                        td พย.
                        td ธค.
                    tbody
            ul.pagination#paging
